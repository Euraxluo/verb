{
    "route": {
        "/": {
            "class": "Ctrlclass",
            "method": "function",
            "routeType": "GET"
        }
    },
    "database": {
        "driver": "medoo",
        "OPTION": {
            "database_type": "mysql",
            "database_name": "database name",
            "server": "127.0.0.1",
            "username": "username",
            "password": "passwd",
            "charset": "utf8"
        }
    },
    "log": {
        "driver": "file",
        "OPTION": {
            "PATH": "path to log"
        }
    },
    "cache": {
        "driver": "apc",
        "OPTION": {
            "host": "127.1",
            "port": 6379,
            "password": "",
            "select": 0,
            "timeout": 10,
            "persistent": false,
            "cache_subdir": true,
            "path": "path to cache",
            "hash_type": "md5",
            "data_compress": false,
            "prefix": "verb_",
            "serialize": true,
            "expire": 0
        }
    }
}
