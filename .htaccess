 <IfModule mod_rewrite.c>
 RewriteEngine on
 RewriteCond %{REQUEST_FILENAME} !-f
 RewriteRule ^(.*)$ index.php/$1 [QSA,PT,L]
 </IfModule>
 <FilesMatch "^(.*)\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
<FilesMatch "^index\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>